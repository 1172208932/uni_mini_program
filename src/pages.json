{
	"pages": [ //pages数组中第一项表示应用启动页，参考：https://uniapp.dcloud.io/collocation/pages
		{
			"path": "pages/index/index",
			"style": {
				"navigationBarTitleText": "首页",
				"onReachBottomDistance": 50
			}
		},
        {
			"path": "pages/buyPage/buyPage",
			"style": {
				"navigationBarTitleText": "购买",
                "usingComponents":{
                    "van-card": "/wxcomponents/vant/dist/card"
               }
			}
		},
		{
			"path": "pages/bookInfo/bookInfo",
			"style": {
				"navigationBarTitleText": "详情页",
                "usingComponents":{
                     "van-goods-action":"/wxcomponents/vant/dist/goods-action",
                     "van-goods-action-icon":"/wxcomponents/vant/dist/goods-action-icon",
                     "van-goods-action-button":"/wxcomponents/vant/dist/goods-action-button"
                }
			}
		},
		{
			"path": "pages/my/my",
			"style": {
				"navigationBarTitleText": "我的"
			}
		}
	],
	"globalStyle": {
		"navigationBarTextStyle": "black",
		"navigationBarTitleText": "首页",
		"navigationBarBackgroundColor": "#F8F8F8",
		"backgroundColor": "#F8F8F8"
	},
	"tabBar": {
        "color": "#7A7E83",
        "selectedColor": "#3cc51f",
        "borderStyle": "black",
        "backgroundColor": "#ffffff",
        "height": "50px",
        "fontSize": "10px",
        "iconWidth": "24px",
        "spacing": "3px",
        "list": [{
            "pagePath": "pages/index/index",
            "iconPath": "static/logo.png",
            "selectedIconPath": "static/logo.png",
            "text": "首页"
        }, {
            "pagePath": "pages/my/my",
            "iconPath": "static/logo.png",
            "selectedIconPath": "static/logo.png",
            "text": "我的"
        }],
        "midButton": {
            "width": "80px",
            "height": "50px",
            "text": "文字",
            "iconPath": "static/logo.png",
            "iconWidth": "24px",
            "backgroundImage": "static/logo.png"
        }
    }
}
